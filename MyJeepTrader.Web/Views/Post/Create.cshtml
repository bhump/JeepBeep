@model MyJeepTrader.Web.Models.PostCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h3>New Posting</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
           <label class="col-sm-2">Select Action:</label>
            <div class="col-sm-10">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"  ng-click="Sell">Sell</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default" >Trade</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default" >Looking For</button>
                    </div>
                </div>
            </div>
            
        </div>




        @*<ul class="nav nav-pills nav-justified">
            <li role="presentation" class="active"><a href="#">Home</a></li>
            <li role="presentation"><a href="#">Profile</a></li>
            <li role="presentation"><a href="#">Messages</a></li>
        </ul>*@

        <br/>


        <div class="form-group">
            <label class="col-sm-2">Select Product:</label>
            <div class="col-sm-10">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default" onclick=" userActionClick(); " ng-click="Jeep = ! Jeep">Jeep</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default" onclick=" userActionClick(); ">Accessories</button>
                    </div>
                    
                </div>
            </div>

        </div>

        <br/>
        <div class="form-group">
            <label class="col-sm-2">Select Jeep Type:</label>
            <div class="col-sm-10" id="jeepTypeDiv">
                @foreach (var m in Model.Models)
                {
                    <input type="checkbox" /> <label>@m.Model</label>
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Select Year:</label>
            <div class="col-sm-10" id="jeepTypeDiv">
                @Html.DropDownListFor(model => model.SelectedYear, new SelectList(Model.Years, null, "Year", "YearId"), "--Select Year--", new {@class="form-control"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2">Description:</label>
            <div class="col-sm-10" id="jeepTypeDiv">
                @Html.TextAreaFor(model => model.Post.PostDescription, new {@class="form-control no-max-width"})
            </div>
        </div>

        <br/>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Review Post</h3>
            </div>
            <div class="panel-body">
                <div ng-show="Sell">Selling </div>
                <div ng-show="Jeep">a Jeep</div>

            </div>
        </div>



        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")



    <script type="text/javascript">
        
        

        function jeepClick() {
           
            $("#jeepTypeDiv").show();
        }

        function partClick() {
            $("#jeepTypeDiv").show();
        }



    </script>
}
