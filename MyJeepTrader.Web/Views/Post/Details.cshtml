@model MyJeepTrader.Data.Models.SearchedPosts

@{
    ViewBag.Title = "Details";
}

<h2>Post Details</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row col-lg-offset-1">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12">
                            <label>State: </label>
                            @Html.DisplayFor(model => model.State)
                        </div>
                        <div class="col-lg-12">
                            <label>City: </label>
                            @Html.DisplayFor(model => model.City)
                        </div>
                        <div class="col-lg-12">
                            <label>Date Posted: </label>
                            @Html.DisplayFor(model => model.DateCreated)
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    @if (Model.PartBrand != null)
                    {
                        <div class="col-lg-12">
                            <label>Part Brand: </label>
                            @Html.DisplayFor(model => model.PartBrand)
                        </div>
                        <div class="col-lg-12">
                            <label>Part Name:</label>
                            @Html.DisplayFor(model => model.PartName)
                        </div>
                    }
                </div>
            </div>
            <div class="row col-lg-offset-1">
                <div class="col-lg-12">
                    @foreach (var image in Model.Images)
                    {
                        string convertedImage = Convert.ToBase64String(image.ToArray());
                        <div class="col-lg-4">
                            <img src="@String.Format("data:image/jpg;base64,{0}", convertedImage)" width="50%" />
                        </div>

                    }
                </div>
            </div>
            <br />
            <div class="row col-lg-offset-1">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <label>Title: </label>
                        @Html.DisplayFor(model => model.PostTitle)
                    </div>
                    <div class="col-lg-12">
                        <label>Description: </label>
                        <div>
                            <p>
                                @Html.DisplayFor(model => model.PostDescription)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
