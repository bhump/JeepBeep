@model MyJeepTrader.Web.ViewModels.AlternateFeedViewModel
@{
    ViewBag.Title = "LiveStream";
}

<h2>LiveStream</h2>
<div class="content">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <h4>Mini Dashboard</h4>
                    <div>
                        @Html.Action("MiniDashboardPartial", "MiniDashboard")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div>
                    @if (ViewBag.Message != null)
                    {
                        if (ViewBag.Message.Contains("wrong"))
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @ViewBag.Message
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @ViewBag.Message
                            </div>
                        }
                    }
                    <div class="col-md-6">
                        @Html.Action("StatusPostSearchPartial", "Status")
                    </div>
                    <div class="col-md-6">
                        <div class="input-group well well-sm">
                            @Html.TextBox("SearchFeed", null, new { @class = "form-control input-sm no-max-width", @placeholder = "Search your feed" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-right col-md-12">
                            <div>
                                <a href="#" class="glyphicon glyphicon-plus-sign"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            @foreach (var stream in Model.LiveFeeds)
            {
                if (stream.IsFeedPost == true)
                {
                    <div id="divLiveStream" class="well-liveposts well-sm">
                        <div class="row">
                            <label class="hidden">@stream.FeedId</label>
                            <div class="col-md-2">
                                <div class="ui-icon-image">
                                    <img src="~/Images/placeholder.jpg" width="100%" />
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="text-left row">
                                    <div class="col-md-12">
                                        @stream.FeedUserName
                                    </div>
                                    <div class="col-md-12">
                                        @stream.FeedDescription
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <a id="aFullPost" href="#" class="navbar-link pull-right">Full Post</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div id="divLiveStream" class="well-livestream well-sm">
                        <div class="row">
                            <label class="hidden">@stream.FeedId</label>
                            <div class="col-md-2">
                                <div class="ui-icon-image">
                                    <img src="~/Images/placeholder.jpg" width="100%" />
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="text-left row">
                                    <div class="col-md-12">
                                        @stream.FeedUserName
                                    </div>
                                    <div class="col-md-12">
                                        @stream.FeedDescription
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-3">
            <div class="placeholder">
                <label>Hot Posts and Such</label>
            </div>
        </div>
    </div>
</div>