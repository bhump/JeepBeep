@model MyJeepTrader.Web.ViewModels.PopularPostsAndProfilesViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
    //Layout = "";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="panel">
                    <div class="form-horizontal no-border">
                        @using (Html.BeginForm("SearchPosts", "Post", FormMethod.Post))
                        {
                            <h2>Welcome to My Jeepbeep</h2>
                            <div class="input-group col-lg-12">
                                @Html.TextBox("Search", null, new { @class = "form-control input-lg no-max-width", @placeholder = "What are you looking for?" })
                                <span class="input-group-btn">
                                    <button class="btn btn-default btn-group-lg btn-lg" type="submit">Search</button>
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel-posts">
            <div class="row">
                @foreach (var post in Model.PopularPosts)
                {
                    <div class="transbox">
                        <div class="col-lg-4" id="divPost_@post.PostId">
                            <div class="row">
                                <div class="col-sm-4">
                                    @if (post.Avatar != null)
                                    {
                                        <img src="@Url.Action("ShowAvatar", "Home", new { UserName = post.UserName})" alt="Image Unavailable" class="img-circle streamImage" />
                                    }
                                    else
                                    {
                                        <img src="~/Images/placeholder.jpg" width="87" height="85" class="img-circle streamImage" />
                                    }
                                </div>
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label>@post.UserName</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            @foreach (var item in post.Model)
                                            {
                                                <label>@item</label>
                                            }
                                        </div>
                                        <div class="col-sm-6">
                                            <label>@post.Year</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label>@post.City,</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <label>@post.State</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label>@post.PostDescription</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @Html.ActionLink("View", "Details", "Post", new { PostId = @post.PostId }, new { @class = "btn btn-sm btn-default" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

