@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <div class="container">
        <div class="transbox">
            <h1 style="color:white">My Jeep Trader</h1>
            <p>Welcome to My Jeep Trader! Your one stop shop to sell, trade, or buy Jeeps and Jeep Accessories!</p>
        </div>
    </div>
</div>

<div class="form-horizontal">
    @using (Html.BeginForm("SearchPosts", "Post", FormMethod.Post))
    {
        <div class="input-group">
            @Html.TextBox("Search", null, new { @class = "form-control input-lg no-max-width", @placeholder = "Search By Anything" })
            <span class="input-group-btn">
                <button class="btn btn-default btn-group-lg btn-lg" type="button">Search</button>
            </span>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Buy</h2>
        <p>
            Search posts now!
        </p>
        <p><a class="btn btn-default" href="~/Post/Index">Search for something!</a></p>
    </div>
    <div class="col-md-4">
        <h2>Sell</h2>
        <p>
            To sell, create a fee account now!
        </p>
        <p><a class="btn btn-default" href="~/Account/Register">Register Now</a></p>
    </div>
    <div class="col-md-4">
        <h2>Trade</h2>
        <p>
            Search all trades posts now!
        </p>
        <p><a class="btn btn-default" href="~/Post/Index?Trade=true">Search Trades!</a></p>
    </div>
</div>
